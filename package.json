{
  "name": "cyberdash_launcher",
  "version": "1.0.0",
  "description": "A Gateway to CyberDashing",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Clartik/CyberDash_Launcher.git"
  },
  "author": "KarMah Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Clartik/CyberDash_Launcher/issues"
  },
  "homepage": "https://github.com/Clartik/CyberDash_Launcher#readme",
  "devDependencies": {
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "basic-ftp": "^5.0.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "ip": "^1.1.8",
    "ssh2-sftp-client": "^9.1.0"
  },
  "build": {
    "extraMetadata": {
      "productName": "CyberDash Launcher"
    },
    "appId": "com.karmah.CyberDashLauncher",
    "productName": "CyberDash Launcher",
    "directories": {
      "output": "dist/v${version}"
    },
    "win": {
      "artifactName": "CyberDash-Launcher-Setup.${exe}",
      "icon": "assets/CyberDash.ico",
      "publish": [
        {
          "provider": "s3",
          "bucket": "cyberdash-downloads"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/CyberDash.ico",
      "uninstallerIcon": "assets/CyberDash.ico",
      "license": "eula.txt"
    }
  }
}
